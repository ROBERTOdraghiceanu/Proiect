@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="bd-example">
        <div id="carouselExampleCaptions" class="carousel slide wow zoomIn" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/download.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/Fitz-Porsche-Ultimate-Series_1024x1024.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/images (1).jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<br />
<br />
<div class="container container-greetings">
    <h1 class="landing-greetings h1-responsive"> Welcome to Library Online</h1>

    <p class='lead text-center'>The world of books is at your fingertips... Explore!!</p>
</div>

<!-- Begin Main -->
<main>
    <div class="container">
        <div class="main">

            <h4 class="packages-display h4-responsive"> Book Deals</h4>

            <!-- <hr> -->
            <br>
            <div class="card-deck">
                <div class="card package wow slideInLeft" data-wow-delay="500ms">
                    <img src="~/images/Fitz-Porsche-Ultimate-Series_1024x1024.jpg" class="card-img-top" alt="caribbean">
                    <div class="card-body">
                        <h4 class="card-title h4-responsive"> <strong> Fitz Porsche ultimate series</strong></h4>
                        <p class="card-text">A book.</p>
                    </div>
                    <blockquote class="blockquote mb-0 card-body">
                        <footer class="">
                            <p class='lead'> $ 52 </p>
                        </footer>
                    </blockquote>
                </div>
                <div class="card package wow slideInUp" data-wow-delay="0.1s">
                    <img src="~/images/download (1)s.jpg" class="card-img-top" alt="polynesian">
                    <div class="card-body">
                        <h4 class="card-title h4-responsive"> <strong> Brave</strong></h4>
                        <p class="card-text">another book</p>
                    </div>
                    <blockquote class="blockquote mb-0 card-body">
                        <footer class="">
                            <p class='lead'> $ 33 </p>
                        </footer>
                    </blockquote>
                </div>
                <div class="card package wow slideInRight" data-wow-delay="0.2s">
                    <img src="~/images/download (1)11.jpg" class="card-img-top" alt="asian">
                    <div class="card-body">
                        <h4 class="card-title h4-responsive"> <strong>Those girls</strong></h4>
                        <p class="card-text">book</p>
                    </div>

                    <blockquote class="blockquote mb-0 card-body">
                        <footer class="">
                            <p class='lead'> $ 31 </p>
                        </footer>
                    </blockquote>
                </div>
            </div>
            <br>
            <div class="wow fadeInUp" data-wow-delay="250ms">
                <a asp-controller="Packages" asp-action="Index"><button class='btn btn-outline-primary btn-block float-center more'>More</button></a>
            </div>
        </div>
    </div>
</main>

